<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lee.yorizori_mybatis.recipeProcedure.mapper.RecipeProcedureMapper"> <!-- 인터페이스 이름과 일치 -->

    <insert id="create" parameterType="ReciepeProcedure">
        INSERT INTO recipe_procedure(RECIPE_ID, SEQ_NUM, PROCEDURE)
        VALUES
        <foreach collection="procedure" item="proced" index="index" separator=",">
            (
             (SELECT recipe_id FROM recipe WHERE recipe_id = #{receipeId}),
            #{seqNum},
            #{proced}
            )
        </foreach>
    </insert>

</mapper>	